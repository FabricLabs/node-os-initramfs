#!/usr/bin/env bash

SOURCES=`pwd`/deps


# Dependencies versions

FUSE_VERSION=2.9.4


# Dependencies URLs

FUSE_URL=http://downloads.sourceforge.net/fuse/fuse-$FUSE_VERSION.tar.gz


#
# FUSE
#

SRC_DIR=$SOURCES/fuse
if [[ ! -d $SRC_DIR ]]; then
  mkdir -p $SRC_DIR                                              &&
  curl -L $FUSE_URL | tar xzf - -C $SRC_DIR --strip-components=1 || exit 10
fi
